<%= header_links %>
  <section class="OwnRoomsContainer">
    <h2>登録済みの部屋一覧</h2>
    <div class="table-responsive">
      <table class="table OwnRoomsTable">
        <thead>
          <tr>
            <th>画像</th>
            <th>施設名</th>
            <th>紹介文</th>
            <th>料金</th>
            <th>作成日</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @rooms.each do |room| %>
            <tr>
              <td>
                <%= link_to room_path(room) do %>
                <% if room.roomimage? %>
                  <%= image_tag room.roomimage.url %>
                <% else %>
                  <%= image_tag ("room.png") %>
                <% end %>
                <% end %>
              </td>
              <td>
                <%= link_to room_path(room) do %>
                <p><%= room.name %></p>
                <% end %>
              </td>
              <td>
                <p><%= room.description %></p>
              </td>
              <td>
                <p><%= number_with_delimiter(room.price) %>円〜/日</p>
              </td>
              <td>
                <p><%= room.created_at.strftime("%Y/%m/%d")%></p>
              </td>
              <td>
                <div class="dropdown">
                  <div class="d-flex align-items-center justify-content-center" id="dropdown-button" data-bs-toggle="dropdown" aria-expanded="false">
                    <%= image_tag ("three-dot-menu.svg") %>
                  </div>
                  <ul class="dropdown-menu DropdownMenu" aria-labelledby="dropdown-button">
                    <li class="dropdown-item"><%= link_to "編集", edit_room_path(room) %></li>
                    <li class="dropdown-item danger"><%= link_to "削除", room_path(room), data: { turbo_method: :delete } %></li>
                  </ul>  
                </div>
              </td>
            </tr>
          <% end %>  
        </tbody>
      </table>
    </div>
  </section>
<%= render 'layouts/shared/footer' %>
