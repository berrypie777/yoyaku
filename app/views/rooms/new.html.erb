<%= header_links %>
<div class="FormWrapper">
  <section class="FormContainer">
    <h2>新規登録</h2>
    <%= form_with model: @room, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name, "施設名", class:"form-label" %>
      <%= f.text_field :name, class:"form-control", placeholder:"施設名を入力" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "施設詳細", class:"form-label" %>
      <%= f.text_area :description, class:"form-control", placeholder:"施設詳細を入力", rows:"5" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "料金", class:"form-label" %>
      <%= f.text_field :price, class:"form-control", placeholder:"一泊の料金を入力" %>
    </div>
    <div class="form-group">
      <%= f.label :address, "住所", class:"form-label" %>
      <%= f.text_field :address, class:"form-control", placeholder:"住所を入力" %>
    </div>
    <div class="form-group uploadarea">
      <%= f.label :roomimage, "施設画像", class:"upload-label" %>
      <%= f.file_field :roomimage, label:"画像をアップロード", class:"form-control" %>
    </div>
    <div class="form-buttons">
      <%= f.submit "登録", class:"btn btn-primary submit" %>
      <%= link_to "キャンセル", new_room_path, class:"btn btn-outline-secondary cancel" %>
    </div>
    <% end %>
  </section>
</div>
<%= render 'layouts/shared/footer' %>
