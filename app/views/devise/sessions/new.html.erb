<%= header_links %>
<div class="AccountFormWrapper">
  <div class="AccountFormContainer">
    <h2 class="AccountFormTitle">ログイン</h2>
      <%= render "devise/shared/error_messages", resource: @user %>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control', placeholder:"メールアドレスを入力" %>
        </div>

        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder:"パスワードを入力" %>
        </div>

        <div class="form-group">
          <%= f.submit  "ログイン", class: 'btn btn-primary' %>
          <%= link_to "アカウントを新規作成", new_user_registration_path, class:"btn btn-outline-secondary" %>
        </div>
      <% end %>
  </div>
</div> 
<%= render 'layouts/shared/footer' %>
